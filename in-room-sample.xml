
<Extensions>
  <Version>1.2</Version>
  <Panel>
    <Icon>General</Icon>
    <Type>Statusbar</Type>
    <Page>
      <Name>Room</Name>
      <Row>
        <Name>Temperature</Name>
        <Widget>
          <WidgetId>temp_now</WidgetId>
          <Type>Text</Type>
          <Name>10</Name>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Temperature set</Name>
        <Widget>
          <WidgetId>temp_down</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=minus</Options>
        </Widget>
        <Widget>
          <WidgetId>temp_set</WidgetId>
          <Type>Text</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>temp_up</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=plus</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Dimmer</Name>
        <Widget>
          <WidgetId>dimmer</WidgetId>
          <Type>Slider</Type>
        </Widget>
      </Row>
      <Row>
        <Name>Lights</Name>
        <Widget>
          <WidgetId>light</WidgetId>
          <Type>ToggleButton</Type>
        </Widget>
      </Row>
      <Row>
        <Name>Selection</Name>
        <Widget>
          <WidgetId>selection</WidgetId>
          <Type>GroupButton</Type>
          <ValueSpace>
            <Value>
              <Key>A</Key>
              <Name>A</Name>
            </Value>
            <Value>
              <Key>B</Key>
              <Name>B</Name>
            </Value>
            <Value>
              <Key>C</Key>
              <Name>C</Name>
            </Value>
            <Value>
              <Key>D</Key>
              <Name>D</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Button</Name>
        <Widget>
          <WidgetId>button</WidgetId>
          <Type>Button</Type>
          <Name>Button</Name>
          <Options>size=3</Options>
        </Widget>
      </Row>
    </Page>
    <Page>
      <Name>Colors</Name>
      <Row>
        <Name>Red</Name>
        <Widget>
          <WidgetId>red</WidgetId>
          <Type>Slider</Type>
        </Widget>
      </Row>
      <Row>
        <Name>Green</Name>
        <Widget>
          <WidgetId>green</WidgetId>
          <Type>Slider</Type>
        </Widget>
      </Row>
      <Row>
        <Name>Blue</Name>
        <Widget>
          <WidgetId>blue</WidgetId>
          <Type>Slider</Type>
        </Widget>
      </Row>
      <Row>
        <Name>Picture</Name>
        <Widget>
          <WidgetId>picture</WidgetId>
          <Type>GroupButton</Type>
          <ValueSpace>
            <Value>
              <Key>smile</Key>
              <Name>Smile</Name>
            </Value>
            <Value>
              <Key>heart</Key>
              <Name>Heart</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
    </Page>
  </Panel>
</Extensions>
